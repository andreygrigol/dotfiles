{
  "vim.leader": "<space>",
  "vim.easymotion": true,

  "vim.normalModeKeyBindings": [
    {
      "before": ["<Ctrl+b>"],
      "commands": ["workbench.view.explorer"]
    },
    {
      "before": ["<Ctrl+p>"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<Ctrl+h>"],
      "after": ["<Ctrl+w>", "h"]
    },
    {
      "before": ["<Ctrl+j>"],
      "after": ["<Ctrl+w>", "j"]
    },
    {
      "before": ["<Ctrl+k>"],
      "after": ["<Ctrl+w>", "k"]
    },
    {
      "before": ["<Ctrl+l>"],
      "after": ["<Ctrl+w>", "l"]
    },
    {
      "before": ["<leader>", "t", "h"],
      "commands": ["workbench.action.selectTheme"]
    },
    {
      "before": ["<leader>", "f", "v"],
      "commands": ["actions.find"]
    },
    {
      "before": ["<Shift+l>"],
      "commands": ["workbench.action.nextEditor"]
    },
    {
      "before": ["<Shift+h>"],
      "commands": ["workbench.action.previousEditor"]
    },
    {
      "before": ["<leader>", "r", "n"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["g", "D"],
      "commands": ["editor.action.revealDeclaration"]
    },
    {
      "before": ["g", "d"],
      "commands": ["editor.action.goToReferences"]
    },
    {
      "before": ["<leader>", "f", "n"],
      "commands": ["welcome.showNewFileEntries"]
    },
    {
      "before": ["<leader>", "t"],
      "commands": ["workbench.action.terminal.openNativeConsole"]
    },
    {
      "before": ["<leader>", "i", "t"],
      "commands": ["workbench.action.terminal.new"]
    },
    {
      "before": ["<leader>", "f", "f"],
      "commands": ["workbench.action.findInFiles"]
    },
    {
      "before": ["<leader>", "h", "a"],
      "commands": ["workbench.action.activityBarLocation.hide"]
    },
    {
      "before": ["<leader>", "s", "a"],
      "commands": ["workbench.action.focusActivityBar"]
    },
    {
      "before": ["<leader>", "x", "x"],
      "commands": ["workbench.action.closeActiveEditor"]
    },
    {
      "before": ["<leader>", "a", "x"],
      "commands": ["workbench.action.closeEditorsInGroup"]
    },
    {
      "before": ["<leader>", "d"],
      "commands": ["editor.action.addSelectionToNextFindMatch"]
    },
    {
      "before": ["<leader>", "|"],
      "commands": ["workbench.action.splitEditorToRightGroup"]
    },
    {
      "before": ["<leader>", "-"],
      "commands": ["workbench.action.splitEditorDown"]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": ["<Ctrl+a>"],
      "commands": ["editor.action.selectAll"]
    },
    {
      "before": ["<Alt+k>"],
      "commands": ["editor.action.copyLinesUpAction"]
    },
    {
      "before": ["<Alt+j>"],
      "commands": ["editor.action.copyLinesDownAction"]
    }
  ],

  "editor.fontLigatures": true,
  "editor.fontFamily": "Noto Mono",
  "workbench.iconTheme": "material-icon-theme",
  "security.workspace.trust.untrustedFiles": "open",
  "editor.minimap.enabled": false,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "explorer.confirmDelete": false,
  "editor.fontSize": 12,
  "editor.lineNumbers": "relative",
  "extensions.ignoreRecommendations": true,
  "git.autofetch": true,
  "workbench.startupEditor": "none",
  "workbench.colorTheme": "Kanagawa"
}
